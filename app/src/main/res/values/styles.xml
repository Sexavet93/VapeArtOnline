<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_style1">
        <item name="android:fontFamily">@font/salsa</item>
        <item name="android:textColor">@color/my_orange</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style2">
        <item name="android:fontFamily">@font/salsa</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style3">
        <item name="android:fontFamily">@font/salsa</item>
        <item name="android:textColor">@color/my_orange</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="button_text_style1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="price_style1">
        <item name="android:fontFamily">@font/salsa</item>
        <item name="android:textColor">@color/my_orange</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="old_price_text_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:foreground">@drawable/bold_strikethrough</item>
        <item name="android:fontFamily">@font/salsa</item>
    </style>

    <style name="old_price_text_style2">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:foreground">@drawable/bold_strikethrough</item>
        <item name="android:fontFamily">@font/salsa</item>
    </style>

    <style name="price_text_style">
        <item name="android:fontFamily">@font/salsa</item>
        <item name="android:textColor">@color/my_orange</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="clickable_button_style">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="default_text_style">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_text_style">
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#9E9E9E</item>
    </style>
</resources>